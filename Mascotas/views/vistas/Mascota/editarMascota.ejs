<h1>Editar Mascota - <%= mascotaAEditar.nombre %></h1>
  <div class="row">
    <div class="col-sm-8">
      <form action="Mascota/EditarMascota" method="post">
        <div class="form-group">
          <label>Nombre</label>
          <input required type="text" class="form-control" placeholder="Nombre de la mascota" name="nombre"
                 value="<%= mascotaAEditar.nombre%>">
        </div>

        <div class="form-group">
          <label>Fecha Nacimiento</label>
          <input type="date" class="form-control" placeholder="Fecha Nacimiento" name="fechaNacimiento"
                 value="<%= mascotaAEditar.fechaNacimiento%>">
        </div>
        <label for="">Raza</label>
        <select class="form-control" name="idRaza">
          <% for(var i=0; i<razas.length; i++){ %>
            <option value='<%=razas[i].id%>'>
              <%=razas[i].nombre%>
            </option>
            <%  } %>
        </select>
        <br>
        <label for="">Pais Nacimiento</label>
        <select class="form-control" name="paisNacimiento">
          <option value='Ecuador'>Ecuador</option>
          <option value='Peru'>Peru</option>
          <option value='Colombia'>Colombia</option>
        </select>
        <br>
        <input type="hidden" name="id" value="<%=mascotaAEditar.id%>">
        <button type="submit" class="btn btn-success">Crear Mascota</button>
      </form>
    </div>
    <div class="col-sm-3">
      <h3 class="text-center"> Identificador de la mascota: <%=mascotaAEditar.id%></h3>
      <h4>Nombre:   <%=mascotaAEditar.nombre%></h4>
      <h5 class="text-center"> Fecha de nacimiento: <%=mascotaAEditar.fechaNacimiento%></h5>
      <p class="text-center">
        Pais de Origen: <%= mascotaAEditar.paisNacimiento %>
      </p>
      <p class="text-center">
        identificador de la raza: <%= mascotaAEditar.idRaza %>
      </p>
    </div>
  </div>
</div>
