<h1>Lista de Mascotas</h1>
<div class="row">
  <div class="col-sm-3">
    <a href="/CrearMascota" class="btn btn-block btn-success">
      Crear mascota
    </a>
  </div>
</div>
<br>



  <% for(var i=0; i<mascotas.length; i++) {%>

  <div class="row ma-margen-top-bottom">
    <div class="col-sm-1"></div>
    <div class="col-sm-4">
      <div class="text-center ma-borde ma-padding-top-bottom">
        <h1> NOMBRE: <%= mascotas[i].nombre %></h1>
      </div>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-5 text-center">
      <div class="text-center ma-borde" style="margin-top: 40px;">
        <p>
          Fecha de nacimiento: <%= mascotas[i].fechaNacimiento %>
          Id raza: <%= mascotas[i].idRaza%>
        </p>
        <p>
          <%= mascotas[i].paisNacimiento %>
        </p>
      </div>
    </div>
    <div class="col-sm-1">
      <a href="/Mascota/BorrarMascota?id=<%= mascotas[i].id %>" class="btn btn-danger btn-block">Borrar mascota</a>
      <a href="/EditarMascota?id=<%= mascotas[i].id %>" class="btn btn-info btn-block">Edit</a>
    </div>
  </div>
  <% }%>

